#include <stdio.h>
#include <stdlib.h>

// Function to swap two numbers
void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

// ---------- 1. Bubble Sort ----------
void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1])
                swap(&arr[j], &arr[j + 1]);
        }
    }
    printf("\nâœ… Array sorted using Bubble Sort!\n");
}

// ---------- 2. Cocktail Shaker Sort ----------
void cocktailSort(int arr[], int n) {
    int swapped = 1, start = 0, end = n - 1;

    while (swapped) {
        swapped = 0;

        // Left to Right pass
        for (int i = start; i < end; i++) {
            if (arr[i] > arr[i + 1]) {
                swap(&arr[i], &arr[i + 1]);
                swapped = 1;
            }
        }

        if (!swapped)
            break;

        swapped = 0;
        end--;

        // Right to Left pass
        for (int i = end - 1; i >= start; i--) {
            if (arr[i] > arr[i + 1]) {
                swap(&arr[i], &arr[i + 1]);
                swapped = 1;
            }
        }
        start++;
    }
    printf("\nâœ… Array sorted using Cocktail Shaker Sort!\n");
}

// ---------- 3. Insertion Sort ----------
void insertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
    printf("\nâœ… Array sorted using Insertion Sort!\n");
}

// ---------- 4. Selection Sort ----------
void selectionSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }
        swap(&arr[minIndex], &arr[i]);
    }
    printf("\nâœ… Array sorted using Selection Sort!\n");
}

// ---------- 5. Merge Sort ----------
void merge(int arr[], int left, int mid, int right) {
    int n1 = mid - left + 1, n2 = right - mid;
    int L[n1], R[n2];

    for (int i = 0; i < n1; i++)
        L[i] = arr[left + i];
    for (int j = 0; j < n2; j++)
        R[j] = arr[mid + 1 + j];

    int i = 0, j = 0, k = left;
    while (i < n1 && j < n2) {
        if (L[i] <= R[j])
            arr[k++] = L[i++];
        else
            arr[k++] = R[j++];
    }
    while (i < n1)
        arr[k++] = L[i++];
    while (j < n2)
        arr[k++] = R[j++];
}

void mergeSort(int arr[], int left, int right) {
    if (left < right) {
        int mid = (left + right) / 2;
        mergeSort(arr, left, mid);
        mergeSort(arr, mid + 1, right);
        merge(arr, left, mid, right);
    }
}

// ---------- 6. Quick Sort ----------
int partition(int arr[], int low, int high) {
    int pivot = arr[high];
    int i = low - 1;

    for (int j = low; j < high; j++) {
        if (arr[j] < pivot) {
            i++;
            swap(&arr[i], &arr[j]);
        }
    }
    swap(&arr[i + 1], &arr[high]);
    return i + 1;
}

void quickSort(int arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

// ---------- Utility Functions ----------
void display(int arr[], int n) {
    printf("Array: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

void inputArray(int arr[], int *n) {
    printf("Enter number of elements: ");
    scanf("%d", n);
    printf("Enter %d elements:\n", *n);
    for (int i = 0; i < *n; i++)
        scanf("%d", &arr[i]);
}

// ---------- Main Function ----------
int main() {
    int arr[100], n, choice;

    while (1) {
        printf("\n--- Sorting Menu ---\n");
        printf("1. Bubble Sort\n");
        printf("2. Cocktail Shaker Sort\n");
        printf("3. Insertion Sort\n");
        printf("4. Selection Sort\n");
        printf("5. Merge Sort\n");
        printf("6. Quick Sort\n");
        printf("7. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 7) {
            printf("\nðŸ‘‹ Exiting program. Bye!\n");
            break;
        }

        inputArray(arr, &n);
        printf("\nBefore sorting: ");
        display(arr, n);

        switch (choice) {
            case 1:
                bubbleSort(arr, n);
                break;
            case 2:
                cocktailSort(arr, n);
                break;
            case 3:
                insertionSort(arr, n);
                break;
            case 4:
                selectionSort(arr, n);
                break;
            case 5:
                mergeSort(arr, 0, n - 1);
                printf("\nâœ… Array sorted using Merge Sort!\n");
                break;
            case 6:
                quickSort(arr, 0, n - 1);
                printf("\nâœ… Array sorted using Quick Sort!\n");
                break;
            default:
                printf("\nâŒ Invalid choice! Try again.\n");
                continue;
        }

        printf("\nAfter sorting: ");
        display(arr, n);
    }
    return 0;
}
