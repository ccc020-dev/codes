#include <stdio.h>
#include <stdlib.h>

// Define structure for a node
struct Node {
    int data;
    struct Node *prev;
    struct Node *next;
};

// Function to create a new node
struct Node* createNode(int val) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = val;
    newNode->prev = newNode->next = NULL;
    return newNode;
}

// Insert at the beginning
struct Node* insertAtBeginning(struct Node* head, int val) {
    struct Node* newNode = createNode(val);
    if (head == NULL)
        return newNode;

    newNode->next = head;
    head->prev = newNode;
    head = newNode;

    printf("\n‚úÖ %d inserted at the beginning.\n", val);
    return head;
}

// Insert at the end
struct Node* insertAtEnd(struct Node* head, int val) {
    struct Node* newNode = createNode(val);
    if (head == NULL)
        return newNode;

    struct Node* temp = head;
    while (temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
    newNode->prev = temp;

    printf("\n‚úÖ %d inserted at the end.\n", val);
    return head;
}

// Insert at a given position
struct Node* insertAtPosition(struct Node* head, int val, int pos) {
    if (pos == 1)
        return insertAtBeginning(head, val);

    struct Node* newNode = createNode(val);
    struct Node* temp = head;
    for (int i = 1; temp != NULL && i < pos - 1; i++)
        temp = temp->next;

    if (temp == NULL) {
        printf("\n‚ö†Ô∏è Invalid position!\n");
        free(newNode);
        return head;
    }

    newNode->next = temp->next;
    if (temp->next != NULL)
        temp->next->prev = newNode;

    temp->next = newNode;
    newNode->prev = temp;

    printf("\n‚úÖ %d inserted at position %d.\n", val, pos);
    return head;
}

// Delete from beginning
struct Node* deleteFromBeginning(struct Node* head) {
    if (head == NULL) {
        printf("\n‚ö†Ô∏è List is empty.\n");
        return head;
    }

    struct Node* temp = head;
    printf("\nüóëÔ∏è %d deleted from beginning.\n", temp->data);
    head = head->next;
    if (head != NULL)
        head->prev = NULL;
    free(temp);
    return head;
}

// Delete from end
struct Node* deleteFromEnd(struct Node* head) {
    if (head == NULL) {
        printf("\n‚ö†Ô∏è List is empty.\n");
        return head;
    }

    struct Node* temp = head;
    if (temp->next == NULL) {
        printf("\nüóëÔ∏è %d deleted from end.\n", temp->data);
        free(temp);
        return NULL;
    }

    while (temp->next != NULL)
        temp = temp->next;

    printf("\nüóëÔ∏è %d deleted from end.\n", temp->data);
    temp->prev->next = NULL;
    free(temp);
    return head;
}

// Delete from any given position
struct Node* deleteFromPosition(struct Node* head, int pos) {
    if (head == NULL) {
        printf("\n‚ö†Ô∏è List is empty.\n");
        return head;
    }

    if (pos == 1)
        return deleteFromBeginning(head);

    struct Node* temp = head;
    for (int i = 1; temp != NULL && i < pos; i++)
        temp = temp->next;

    if (temp == NULL) {
        printf("\n‚ö†Ô∏è Invalid position!\n");
        return head;
    }

    if (temp->next != NULL)
        temp->next->prev = temp->prev;
    if (temp->prev != NULL)
        temp->prev->next = temp->next;

    printf("\nüóëÔ∏è %d deleted from position %d.\n", temp->data, pos);
    free(temp);
    return head;
}

// Display the list
void display(struct Node* head) {
    if (head == NULL) {
        printf("\n‚ö†Ô∏è List is empty.\n");
        return;
    }

    struct Node* temp = head;
    printf("\nüìã List elements: ");
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("\n");
}

// Search an element
void search(struct Node* head, int key) {
    int pos = 1;
    struct Node* temp = head;

    while (temp != NULL) {
        if (temp->data == key) {
            printf("\n‚úÖ Element %d found at position %d.\n", key, pos);
            return;
        }
        temp = temp->next;
        pos++;
    }
    printf("\n‚ùå Element %d not found in the list.\n", key);
}

// Reverse the list
struct Node* reverse(struct Node* head) {
    struct Node *temp = NULL, *curr = head;

    while (curr != NULL) {
        temp = curr->prev;
        curr->prev = curr->next;
        curr->next = temp;
        curr = curr->prev;
    }

    if (temp != NULL)
        head = temp->prev;

    printf("\nüîÅ List reversed successfully.\n");
    return head;
}

// Main function (Menu Driven)
int main() {
    struct Node* head = NULL;
    int choice, val, pos;

    while (1) {
        printf("\n--- Doubly Linked List Menu ---\n");
        printf("1. Insert at Beginning\n");
        printf("2. Insert at End\n");
        printf("3. Insert at Position\n");
        printf("4. Delete from Beginning\n");
        printf("5. Delete from End\n");
        printf("6. Delete from Position\n");
        printf("7. Display List\n");
        printf("8. Search Element\n");
        printf("9. Reverse List\n");
        printf("10. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter value: ");
                scanf("%d", &val);
                head = insertAtBeginning(head, val);
                break;
            case 2:
                printf("Enter value: ");
                scanf("%d", &val);
                head = insertAtEnd(head, val);
                break;
            case 3:
                printf("Enter value and position: ");
                scanf("%d %d", &val, &pos);
                head = insertAtPosition(head, val, pos);
                break;
            case 4:
                head = deleteFromBeginning(head);
                break;
            case 5:
                head = deleteFromEnd(head);
                break;
            case 6:
                printf("Enter position: ");
                scanf("%d", &pos);
                head = deleteFromPosition(head, pos);
                break;
            case 7:
                display(head);
                break;
            case 8:
                printf("Enter element to search: ");
                scanf("%d", &val);
                search(head, val);
                break;
            case 9:
                head = reverse(head);
                break;
            case 10:
                printf("\nüëã Exiting program. Bye!\n");
                exit(0);
            default:
                printf("\n‚ùå Invalid choice! Try again.\n");
        }
    }
    return 0;
}
